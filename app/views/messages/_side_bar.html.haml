.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        = current_user.name
      %div
        = link_to new_group_path, class: "side-bar__user-name__top-items__icons" do
          = icon('far', 'edit', class: 'edit')
        = link_to edit_user_path(current_user), class: "side-bar__user-name__top-items__icons" do
          = icon('fas', 'cog', class: 'cog')
  
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__main
        = link_to group_messages_path(group) do
          .side-bar__group-list__main__name
            = group.name
          .side-bar__group-list__main__message
            = group.show_last_message